<link rel="stylesheet" href="/css/signup.css">



<section id="signup-page">

    <header>

        <button type="button" class="btn btn-success" disabled> Docent Websurfing</button>
        <div class="spinner-border"  role="status">
            <span class="visually-hidden">Loading...</span>
        </div>
        <div class="spinner-grow"  role="status">
            <span class="visually-hidden">Loading...</span>
         </div>
    </header>



        
    <form  id="signup-form">



        <div class="d-flex flex-column flex" >

            <div class="p-2 row mb-3 d-flex flex-nowrap">
            <label for="f-name" class="col-sm-2 col-form-label ">First&nbsp;Name&nbsp;:</label>
            <div class="col-sm-10" id="check" style="width:140px">

                <input  type="text" class="form-control mg-left-5" placeholder="First name" aria-label="First name" id="f-name">


            </div>
            
            </div>
            <div class="p-2 row mb-3 d-flex flex-nowrap">
                <label for="l-name" class="col-sm-2 col-form-label">Last&nbsp;Name&nbsp;:</label>
                <div class="col-sm-10" style="width:140px">

                    <input   type="text" class="form-control  mg-left-5" placeholder="Last name" aria-label="Last name" id="l-name">

                </div>
            
            </div>
        
            <div class="p-2 row mb-3 d-flex flex-nowrap" >
            <label for="inputEmail3" class="col-sm-2 col-form-label">Email&nbsp;:</label>
            <div class="col-sm-10" style="width:140px" >
                <input type="email" class="form-control mg-left-5" id="inputEmail3" placeholder="xyz@123.com">
            </div>
            </div>
            <div class="p-2 row mb-3 d-flex flex-nowrap">
            <label for="inputPassword3" class="col-sm-2 col-form-label">Password&nbsp;:</label>
            <div class="col-sm-10" style="width:140px">
                <input  type="password" class="form-control  mg-left-5" id="inputPassword3" placeholder="********">
            </div>
            </div>

            <div class="p-2 row mb-3 d-flex flex-nowrap">
                <label for="confirm-password3" class="col-sm-2 col-form-label">Confirm&nbsp;Password&nbsp;:</label>
                <div class="col-sm-10" style="width:140px">
                    <input  type="password" class="form-control mg-left-5" id="confirm-password3" placeholder="********">
                </div>
            </div>

            <button type="button" class="mx-2 row mb-3 btn btn-primary btn-lg mt-2">Sign Up</button>
        </div>
        
    
        
    </form>

